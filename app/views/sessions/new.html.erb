<h3>Sign into VCDelta.org</h3>
<%= simple_form_for :session, url: sessions_path, :html => {:class => 'form-horizontal' } do |session| %>
  <div class="well">
    <%= session.input :email, :hint => "The email you used to create your account", :input_html => { :class => "span5" } %>
    <%= session.input :password, :input_html => { :class => "span5" } %>
  </div>
  <%= session.button :submit, "Sign in", :class => 'btn btn-primary btn-large' %>
  <%= link_to "Forgot your password?", new_password_reset_path, :class => 'btn btn-primary btn-large pull-right' %>
<% end %>